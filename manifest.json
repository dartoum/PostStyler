{
  "manifest_version": 3,
  "name": "PostStyler",
  "version": "1.1",
  "description": "Make your LinkedIn posts stand out with styled text formatting.",
  "permissions": [],
  "host_permissions": [
    "*://*.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.linkedin.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_icon": {
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "128": "icons/icon128.png"
  }
}
